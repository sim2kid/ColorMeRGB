@{
    ViewBag.Title = "Sign Up";
}

@*Created by Gabriel Willemssen*@
<style>
    body {
        background-color: white;
        background-image: linear-gradient(white, skyblue);
        background-attachment: fixed;
        font-family: Tahoma, Verdana, sans-serif;
    }

    #para2 {
        color: darkslategrey;
        font-size: 50px;
        font-family: Tahoma, Verdana, sans-serif;
        margin-top: 100px;
        margin-bottom: 10px;
        text-align: center;
    }

    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid darkgrey;
        box-sizing: border-box;
    }

    button {
        background-color: deepskyblue;
        border: none;
        color: white;
        padding: 12px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-family: Tahoma, Verdana, sans-serif;
        font-size: 18px;
        cursor: pointer;
        border-radius: 16px;
        transition-duration: 0.4s;
        margin: 8px 0;
        width: 100%;
    }

    .button1 {
        background-color: deepskyblue;
        color: white;
        border: 2px solid deepskyblue;
    }

        .button1:hover {
            background-color: skyblue;
            color: white;
            border: 2px solid deepskyblue;
        }

    .container1 {
        padding: 16px;
        margin: auto;
        width: 50%
    }

    span.psw {
        float: right;
        padding-top: 16px;
    }
</style>

<p id="para2">Sign Up</p>
<body>



    <div class="container1">
        <label for="uname"><b>Username</b></label>
        <br>
        <input type="text" placeholder="Create Username" name="uname" required>
        <br>

        <label for="psw"><b>Password</b></label>
        <br>
        <input type="password" placeholder="Create Password" name="psw" required>

        <button class="button1" type="submit">Sign Up</button>

        <p>Already have an account? <a href="@Url.Action("Login", "Home")">Log in here</a></p>

    </div>


</body>