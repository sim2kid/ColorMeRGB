@{
    ViewBag.Title = "ColorMe RGB";
    // Written by Owen Ravelo
    bool LoggedIn = ViewBag.LoggedIn ?? false;
}

@*Created by Gabriel Willemssen*@
<style>
    body {
        background: rgb(244,255,109,1);
        background: linear-gradient(214deg, rgba(223,58,223,0.8) 0%, rgba(255,255,255,0) 50%), 
                    linear-gradient(100deg, rgba(200,41,189,0.8) 0%, rgba(255,255,255,0) 50%),
                    linear-gradient(3deg, rgba(120,66,213, 0.8) 0%, rgba(255,255,255,0) 50%),
                    linear-gradient(299deg, rgba(255,255,255,0) 0%, rgba(182,50,233,0.4) 23%, rgba(255,255,255,0) 63%),
                    rgba(225,230,140,1);
        background-repeat: no-repeat;
        background-position: right top;
        background-attachment: scroll;
    }

    #para1 {
        color: white;
        font-size: 80px;
        font-family: Tahoma, Verdana, sans-serif;
        margin-top: 200px;
        margin-bottom: 10px;
        text-align: center;
    }
    #para2 {
        color: white;
        font-size: 30px;
        font-family: Tahoma, Verdana, sans-serif;
        margin-top: 50px;
        text-align: center;
    }

    .button {
        background-color: deepskyblue;
        border: none;
        color: white;
        padding: 15px 40px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-family: Tahoma, Verdana, sans-serif;
        font-size: 24px;
        cursor: pointer;
        border-radius: 16px;
        transition-duration: 0.4s;
    }

    .button1 {
        background-color: deepskyblue;
        color: white;
        border: 2px solid deepskyblue;
    }

    .button1:hover {
        background-color: white;
        color: deepskyblue;
        border: 2px solid deepskyblue;
    }

    .center {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 200px;
        border: none;
    }
</style>

<main>
    <p id="para1">ColorMe RGB</p>
    <p id="para2">Guess the RGB values of randomly generated colors!</p>

    <div class="center">
        @if (LoggedIn) // Owen Ravelo
        {
            <button class="button button1" onclick="location.href='@Url.Action("Index","Game")'">Play!</button>
        } 
        else
        {
            <button class="button button1" onclick="location.href='@Url.Action("Login","Auth")'">Login!</button>
        }
    </div>
</main>