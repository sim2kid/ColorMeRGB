<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/css/site.css" rel="stylesheet" type="text/css">
    <link href="~/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/css/bootstrap-theme.css rel="stylesheet" type="text/css">
    <script src="~/js/modernizr-2.8.3.js"></script>
</head>
@{
    // Written by Owen Ravelo
    bool LoggedIn = ViewBag.LoggedIn ?? false;
}
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Color Me RGB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if(!LoggedIn) {
                        <li style="background-color: #591110;">@Html.ActionLink("Login", "Login", "Auth")</li>
                        <li>@Html.ActionLink("Sign Up", "SignUp", "Auth")</li>
                    } else
                    {
                        <li>@Html.ActionLink("Play", "Index", "Game")</li>
                        <li>@Html.ActionLink("History", "Index", "History")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Auth")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>

    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
