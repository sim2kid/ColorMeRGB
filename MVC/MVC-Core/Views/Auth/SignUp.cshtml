@model MVC_Core.Models.AuthModel;
@{
    ViewBag.Title = "Sign Up";
}

@*Created by Gabriel Willemssen*@
<style>
    body {
        background-color: white;
        background-image: linear-gradient(white, skyblue);
        background-attachment: fixed;
        font-family: Tahoma, Verdana, sans-serif;
    }

    #para2 {
        color: darkslategrey;
        font-size: 50px;
        font-family: Tahoma, Verdana, sans-serif;
        margin-top: 100px;
        margin-bottom: 10px;
        text-align: center;
    }

    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid darkgrey;
        box-sizing: border-box;
    }

    .button1 {
        background-color: deepskyblue;
        color: white;
        border: 2px solid deepskyblue;
        color: white;
        padding: 12px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-family: Tahoma, Verdana, sans-serif;
        font-size: 18px;
        cursor: pointer;
        border-radius: 16px;
        transition-duration: 0.4s;
        margin: 8px 0;
        width: 100%;
    }

    .button1:hover {
        background-color: skyblue;
        color: white;
    }

    .container1 {
        padding: 16px;
        margin: auto;
        width: 50%
    }

    span.psw {
        float: right;
        padding-top: 16px;
    }
</style>


<main>
    <p id="para2">Sign Up</p>
    <div class="container1">
        @using (Html.BeginForm()) { // Owen Added form validation stuff
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <label for="username"><b>Username</b></label>
            <br>
            <input type="text" placeholder="Create Username" name="username" value="@Model.Username" required>
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" });
            <br>


            <label for="password"><b>Password</b></label>
            <br>
            <input type="password" placeholder="Create Password" name="password" required>
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" });

            <button class="button1" type="submit">Sign Up</button>

            <p>Already have an account? <a href="@Url.Action("Login", "Auth")">Log in here</a></p>
        }
    </div>


</main>